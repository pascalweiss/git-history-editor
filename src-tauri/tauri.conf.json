{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-schema-generator/schemas/config.schema.json",
  "productName": "Git History Editor",
  "version": "0.1.0",
  "identifier": "com.git-history-editor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Git History Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' asset: tauri:; connect-src 'self' ipc: http://ipc.localhost https://github.com https://objects.githubusercontent.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.png"
    ],
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/OWNER/git-history-editor/releases/latest/download/latest.json"
      ],
      "pubkey": "REPLACE_WITH_YOUR_PUBLIC_KEY"
    }
  }
}
